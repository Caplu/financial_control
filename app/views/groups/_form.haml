=form_for @group, :html => { :class => :form } do |f|
  .group
    =f.label :name, :class => :label
    =f.text_field :name, :class => 'text_field'
    %span.description Ex.: "Contas da empresa"

  .group.navform.wat-cf
    %button.button{:type => 'submit'}
      =image_tag 'web-app-theme/icons/tick.png', :alt => t('web-app-theme.save')
      =t 'web-app-theme.save'
    %span.text_button_padding=t 'web-app-theme.or'
    =link_to t('web-app-theme.cancel'), groups_path, :class => 'text_button_padding link_button'
