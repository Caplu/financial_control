=form_for @user, :html => { :class => :form } do |f|
  .group
    =f.label :name, :class => :label
    =f.text_field :name, :class => 'text_field'
    %span.description Nome completo
  .group
    =f.label :email, :class => :label
    =f.text_field :email, :class => 'text_field'
  .group
    =f.label :password, :class => :label
    =f.password_field :password, :class => 'text_field'
    %span.description Digite uma senha
  .group
    =f.label :password_confirmation, :class => :label
    =f.password_field :password_confirmation, :class => 'text_field'
    %span.description Repita a senha
  .group
    =f.label :admin, :class => :label
    =f.check_box :admin
    %span.description Marque esta opção se desejar atribuir permissões de administrador à este usuário
  .group
    =f.label :active, :class => :label
    =f.check_box :active
    %span.description Para desativar este usuário, desmarque esta opção. ATENÇÃO: este usuário não conseguirá fazer login

  .group.navform.wat-cf
    %button.button{:type => 'submit'}
      =image_tag 'web-app-theme/icons/tick.png', :alt => t('web-app-theme.save')
      =t 'web-app-theme.save'
    %span.text_button_padding=t 'web-app-theme.or'
    =link_to t('web-app-theme.cancel'), users_path, :class => 'text_button_padding link_button'
